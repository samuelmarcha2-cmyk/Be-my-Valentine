  animation: floatUp 4s linear infinite, pulse 1.2s ease-in-out infinite;
  will-change: transform, opacity;
}
@keyframes floatUp {0% {transform:translateY(0);opacity:0;}10%{opacity:1;}100%{transform:translateY(-80px);opacity:1;}}
@keyframes pulse {0%,100%{transform:scale(1);}50%{transform:scale(1.3);}}
.explode {animation: explode 0.9s ease-out forwards !important;}
@keyframes explode {0%{transform:scale(1);}100%{transform:translate(var(--x),var(--y)) scale(2);}}
/* Background hearts & flowers */
