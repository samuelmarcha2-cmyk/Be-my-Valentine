<body>

<div class="bg-elements" id="bgElements"></div>

<div class="card">
  <div class="hearts" id="hearts"></div>
  <h1 class="title">Can I be your Valentine?</h1>
  <div class="buttons">
    <button id="yesBtn">Yes</button>
    <button id="noBtn">No</button>
  </div>
</div>

<div class="overlay" id="overlay">
  <div class="prank-box">
    <h2>It's a Prank ðŸ˜‚</h2>
    <p>You Fell For It. Happy Valentines!!!</p>
    <button id="closeBtn">Close</button>
  </div>
</div>

<script>
const noBtn=document.getElementById("noBtn");
const yesBtn=document.getElementById("yesBtn");
const overlay=document.getElementById("overlay");
const closeBtn=document.getElementById("closeBtn");
const heartsContainer=document.getElementById("hearts");
const bgElements=document.getElementById("bgElements");

const noTexts=["Please","Are you sure?","Positive?","I will be really sad."];
let noClickCount=0;
let yesScale=1;

// hearts above title
const hearts=[];
for(let i=0;i<30;i++){
  const heart=document.createElement("div");
  heart.className="heart-float";
  heart.textContent="â¤";
  heart.style.left=Math.random()*100+"%";
  heart.style.fontSize=14+Math.random()*22+"px";
  heart.style.animationDuration=3+Math.random()*3+"s";
  heart.style.animationDelay=Math.random()*2+"s";
  heartsContainer.appendChild(heart);
  hearts.push(heart);
}

// background hearts & flowers
const bgChars=["â¤","â¤","â¤","ðŸŒ¼","ðŸŒ¼","ðŸŒ¼"];
for(let i=0;i<80;i++){
  const span=document.createElement("span");
  span.textContent=bgChars[Math.floor(Math.random()*bgChars.length)];
  span.style.left=Math.random()*100+"%";
  span.style.fontSize=12+Math.random()*30+"px";
  span.style.animationDuration=8+Math.random()*8+"s";
  span.style.animationDelay=Math.random()*5+"s";
  span.className=span.textContent==="â¤"?"bg-heart":"bg-flower";
  bgElements.appendChild(span);
}

// No button behavior
noBtn.addEventListener("click",()=>{
  if(noClickCount<noTexts.length){
    noBtn.textContent=noTexts[noClickCount];
    noClickCount++;
  }else{
    overlay.style.display="flex";
  }
  yesScale*=1.35;
  yesBtn.style.transform=`scale(${yesScale})`;
});

// Yes button behavior
yesBtn.addEventListener("click",()=>{
  hearts.forEach(h=>{
    const x=(Math.random()*300-150)+"px";
    const y=(Math.random()*-200-50)+"px";
    h.style.setProperty("--x",x);
    h.style.setProperty("--y",y);
    h.classList.add("explode");
  });
  setTimeout(()=>{overlay.style.display="flex";},400);
});

// Close button resets
closeBtn.addEventListener("click",()=>{
  overlay.style.display="none";
  yesScale=1;
  yesBtn.style.transform=`scale(${yesScale})`;
  noClickCount=0;
  noBtn.textContent="No";
  hearts.forEach(h=>{
    h.classList.remove("explode");
    h.style.transform="translateY(0) scale(1)";
  });
});

// Click outside interactive hearts/flowers
document.body.addEventListener("click", e=>{
  if(!e.target.closest('.card') && !e.target.closest('.overlay')){
    const el=document.createElement("div");
    el.className="float-element";
    el.textContent=Math.random()<0.5?"â¤":"ðŸŒ¼";
    el.style.left=(e.clientX-10)+"px";
    el.style.fontSize=14+Math.random()*28+"px";
    document.body.appendChild(el);
    setTimeout(()=>el.remove(),5000);
  }
});
</script>

</body>
</html>
