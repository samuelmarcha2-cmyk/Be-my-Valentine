}
#yesBtn {background:white; color:#ff2f7a; box-shadow:0 6px 15px rgba(0,0,0,0.2);}
#noBtn {background:#ff2f7a; color:white; box-shadow:0 6px 15px rgba(0,0,0,0.2);}
.hearts {position: relative; height: 70px; margin-bottom: 10px;}
.heart-float {
